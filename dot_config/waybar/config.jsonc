// Catppuccin-inspired Waybar config with icons and widgets
{
  "layer": "top",
  "position": "top",
  "height": 20,
  "modules-left": [
    "custom/exit",
    // "custom/arch",
    "hyprland/workspaces",
    "custom/pacman",
  ],
  "modules-center": [
    // "wlr/taskbar",
    "hyprland/window",
  ],
  "modules-right": [
    "battery",
    "backlight",
    "pulseaudio",
    "network",
    "bluetooth",
    "custom/cliphist",
    "tray",
    "clock",
  ],
  // "custom/nvidia": {
  //   "exec": "nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1% üå°Ô∏è\\2¬∞C/g'",
  //   "format": "{} üñ•Ô∏è",
  //   "interval": 2
  // },
  "tray": {
    "spacing": 4,
  },
  "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "Ôäî {status}",
    "format-disabled": "", // an empty format will hide the module
    // "format-connected": "Ôäî {num_connections} connected",
    "format-connected": "Ôäî {device_alias} connected",
    "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "overskride",
  },
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "<span color=\"#89b4fa\">Û∞®û</span>",
      "2": "<span color=\"#fab387\">Û∞àπ</span>",
      "3": "<span color=\"#f38ba8\">ÔÄΩ</span>",
      "4": "<span color=\"#94e2d5\">Û∞àô</span>", // Docs/Obsidian
      "5": "<span color=\"#b4befe\">Û∞≠π</span>", // Comms
      "6": "<span color=\"#f9e2af\">Û∞ö©</span>", // AI
      "7": "<span color=\"#cdd6f4\">Û∞®â</span>",
      "8": "<span color=\"#f5e0dc\">ÔÑõ</span>",
      "9": "<span color=\"#cdd6f4\">ÔÜ∂</span>", // Steam/Gaming
      "10": "<span color=\"#a6e3a1\">ÔÜº</span>",
      // "urgent": "ÔÅ™",
      // "focused": "",
      // "default": "",
    },
    "persistent-workspaces": {
      // "*": 3
    },
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    //   "ignore-list": ["Alacritty", "kitty"],
    //   "app_ids-mapping": {
    //     "firefoxdeveloperedition": "firefox-developer-edition"
    //   },
    //   "rewrite": {
    //     "Firefox Web Browser": "Firefox",
    //     "Foot Server": "Terminal"
    //   }
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 50,
    "rewrite": {
      ".+ Windsurf - (.*)": "Windsurf ‚Äî $1",
      "(.+) ‚Äî Zen Browser": "Zen ‚Äî $1",
    },
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ÔÉß {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{icon} {time}",
    "format-good": "", // An empty format will hide the module
    "format-full": "",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
  },
  "backlight": {
    // "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["Û∞õ©", "Û±©é", "Û±©è", "Û±©ê", "Û±©ë", "Û±©í", "Û±©ì", "Û±©î", "Û±©ï", "Û±©ñ", "Û∞õ®"],
    "on-scroll-up": "brillo -qA 2",
    "on-scroll-down": "brillo -qU 2",
  },
  "pulseaudio": {
    "scroll-step": 5, // %, can be a float
    "format": "{icon} {volume}% {format_source}",
    "format-bluetooth": "Ôäî {volume}% {icon} {format_source}",
    "format-bluetooth-muted": "Ôäî Óª® {icon} {format_source}",
    "format-muted": "Óª® {format_source}",
    "format-source": "ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-middle": "pavucontrol",
  },
  "network": {
    // "interface": "wlan0", // (Optional) To force the use of this interface,
    "format-wifi": "Ôá´ {essid}",
    "format-ethernet": "ÓΩÑ {ifname}: Connected",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "ÔÅ± Disconnected",
    // "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "family": "ipv4",
    "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}",
    "tooltip-format-ethernet": "ÓΩÑ {ifname}\nIP: {ipaddr}\nÔÅ¢ {bandwidthUpBits} ÔÅ£ {bandwidthDownBits}",
    "on-click-right": "kitty iwctl"
  },
  "clock": {
    "format": "Û±ëÖ{:%e %b %H:%M}",
    "format-alt": "Û∞É≠ {:%a %d %B %Y %R}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      // "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#cba6f7'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'>{}></span>",
        "weeks": "<span color='#99ffdd'>W{}></span>",
        "weekdays": "<span color='#b4befe'>{}></span>",
        "today": "<span color='#fab387'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "custom/pacman": {
    "format": "ÔÜ≤ {}",
    "interval": 3600, // every hour
    "exec": "checkupdates | wc -l",
    "exec-if": "[ $(checkupdates | wc -l) -ne 0 ]",
    // "on-click": "kitty -e 'paru'; pkill -SIGUSR2 waybar",
    "on-click": "kitty -e 'paru'; pkill -SIGRTMIN+8 waybar",
    "min-length": 3,
    "signal": 8
  },
  "custom/exit": {
    "format": "ÔÄë",
    "on-click": "wlogout",
    "on-click-right": "hyprlock",
  },
}
