# Encryption configuration
encryption = "age"

[age]
identity = "~/.config/chezmoi/age-key.txt"
recipient = "age1pz4p0xgkaxljume7ejsna8r85pk3ltgmc2kwmnzw6lwahs3lmseq76a8jg"

[data]
# Core context
environment = "personal"
machine_type = "desktop"

# Features
package_management = true
gaming = true

# Legacy compatibility
laptop = false
personal = true

# System information
osid = "linux-arch"
wm = "hyprland"

# API Keys - use environment variables for security
# Access via {{ env "FISH_AI_GITHUB_TOKEN" }} in templates

[data.authorized_machines]
list = ["desktop-main", "laptop-personal", "workstation-home", "canary"]

[data.environments]
[data.environments.personal]
fish_ai_enabled = true
[data.environments.work]  
fish_ai_enabled = false
[data.environments.school]
fish_ai_enabled = false

# For non-sensitive config values only:
# example_public_setting = "value"

# SSH Keys configuration
[data.ssh_keys]
github = "~/.ssh/id_ed25519"
# gitlab = "~/.ssh/id_gitlab"
# work = "~/.ssh/work_ed25519"

# SSH Hosts configuration
[data.ssh_hosts]
# Add your personal servers here
